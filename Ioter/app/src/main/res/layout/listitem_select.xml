<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_size"
        android:textColor="@color/common_text_color"
        android:textSize="14sp"
        android:text="TextView" />

    <View
        android:id="@+id/divide_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:layout_marginLeft="@dimen/common_margin_size"
        android:layout_marginRight="@dimen/common_margin_size"
        android:background="@color/common_divide_color" />

</LinearLayout>