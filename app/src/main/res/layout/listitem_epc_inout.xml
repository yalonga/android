<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_size"
        android:layout_marginRight="@dimen/common_margin_size"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textSize="14sp"
            android:textColor="@color/common_text_color" />

        <TextView
            android:id="@+id/epc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:textColor="@color/common_text_color" />

        <TextView
            android:id="@+id/shelf_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/common_text_color" />
    </LinearLayout>

    <View
        android:id="@+id/divide_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:layout_marginLeft="@dimen/common_margin_size"
        android:layout_marginRight="@dimen/common_margin_size"
        android:background="@color/common_divide_color" />

</LinearLayout>