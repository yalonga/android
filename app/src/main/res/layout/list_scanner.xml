<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#F3F3F3"
    android:padding="5dip" >
    <!-- ListRow Left side Thumbnail image -->
    <ImageView
		android:id="@+id/dvIcon"
		android:contentDescription="@string/app_name"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:layout_marginLeft="2dip"
		android:layout_centerVertical="true"
		android:background="@drawable/grey_rectangle"
        android:padding="2dip"
		android:src="@mipmap/ic_action_help" />
    <!-- City-->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/dvIcon"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="3dip" >

        <TextView
		    android:id="@+id/dvName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Scanner Serial Number"
		    android:textColor="#a52a2a"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:typeface="sans" />
		<!-- Weather Information-->

        <TextView
            android:id="@+id/dvMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:text="Scanner B/T Mac Address"
            android:textColor="#343434"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>
    <!-- Rightend Arrow -->
    <ImageView
        android:id="@+id/dvType"
        android:contentDescription="@string/app_name"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="3dip"
        android:src="@mipmap/ic_action_save" />
</RelativeLayout>
